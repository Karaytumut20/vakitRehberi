{
  "expo": {
    "name": "VakitRehberi",
    "slug": "VakitRehberi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vakitrehberi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    // iOS ayarları
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.VakitRehberi",
      "infoPlist": {
        // Arka planda remote notification izni
        "UIBackgroundModes": [
          "remote-notification"
        ]
      }
    },

    // Android ayarları
    "android": {
      "package": "com.anonymous.VakitRehberi",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "backgroundColor": "#E6F4FE",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "SCHEDULE_EXACT_ALARM",
        "POST_NOTIFICATIONS"
      ]
    },

    // Web ayarları (default Expo ayarları)
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    // KULLANDIĞIMIZ PLUGINLER
    "plugins": [
      // Expo Router ile dosya tabanlı routing
      "expo-router",

      // Ezan bildirimleri için expo-notifications
      [
        "expo-notifications",
        {
          // index.tsx içinde kullandığımız kanal ID'si
          "defaultChannel": "adhan_channel_v1",

          // Paketlenecek ses dosyası (path gerçek olmalı!)
          "sounds": [
            "./assets/sounds/adhan.mp3"
          ]
        }
      ]
    ],

    // Typed routes vs. için (Expo Router default)
    "experiments": {
      "typedRoutes": true
    }
  }
}
